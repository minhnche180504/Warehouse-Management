<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <display-name>ISP392-G3 Project</display-name>
    <description>Project for ISP392</description>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <!-- Character Encoding Filter -->
    <!-- Product Management Servlets -->
    <servlet>
        <servlet-name>ListProduct</servlet-name>
        <servlet-class>controller.product.ListProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProduct</servlet-name>
        <url-pattern>/admin/list-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProduct</servlet-name>
        <servlet-class>controller.product.CreateProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProduct</servlet-name>
        <url-pattern>/admin/create-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>controller.product.EditProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/admin/edit-product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>controller.product.DeleteProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/admin/delete-product</url-pattern>
    </servlet-mapping>

  
    <servlet>
        <servlet-name>WSWarehouseInventoryServlet</servlet-name>
        <servlet-class>controller.inventory.WSWarehouseInventoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WSWarehouseInventoryServlet</servlet-name>
        <url-pattern>/ws-warehouse-inventory</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>
